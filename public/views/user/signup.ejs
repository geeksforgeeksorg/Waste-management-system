


<%- include("../common/head.ejs") %>
    <%- include("../common/navbar.ejs") %>

        <section class="flex justify-center my-12 ">
            <div
                class="max-w-md relative flex border border-black  flex-col p-4 rounded-md text-black bg-white px-12 py-6">
                <div class="text-2xl font-bold mb-2 text-[#1e0e4b] text-center">Welcome back to <span
                        class="text-[#7747ff]">App</span></div>
                <div class="text-sm font-normal mb-4 text-center text-[#1e0e4b]">Create an account account</div>
                <form class="flex flex-col gap-3" action="/signup_process" method="post">
                    <div class="block relative">
                        <label for="name"
                            class="block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2">Name</label>
                        <input type="text" id="name" name="name" required
                            class="rounded border border-gray-200 text-sm w-full font-normal leading-[18px] text-black tracking-[0px] appearance-none block h-11 m-0 p-[11px] focus:ring-2 ring-offset-2  ring-gray-900 outline-0">

                    </div>
                    <div class="block relative">
                        <label for="mobile number"
                            class="block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2">Mobile
                            Number</label>
                        <input type="tel" id="name" name="number" required
                            class="rounded border border-gray-200 text-sm w-full font-normal leading-[18px] text-black tracking-[0px] appearance-none block h-11 m-0 p-[11px] focus:ring-2 ring-offset-2  ring-gray-900 outline-0">
                    </div>
                    <div class="block relative">
                        <label for="email"
                            class="block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2">Email</label>
                        <input type="email" id="name" name="email" required
                            class="rounded border border-gray-200 text-sm w-full font-normal leading-[18px] text-black tracking-[0px] appearance-none block h-11 m-0 p-[11px] focus:ring-2 ring-offset-2  ring-gray-900 outline-0">
                    </div>
                    <div class="block relative">
                        <label for="Address"
                            class="block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2">Address</label>
                        <input type="text" id="name" name="adderss" required
                            class="rounded border border-gray-200 text-sm w-full font-normal leading-[18px] text-black tracking-[0px] appearance-none block h-11 m-0 p-[11px] focus:ring-2 ring-offset-2  ring-gray-900 outline-0">
                    </div>


                    <div class="block relative">
                        <label for="password"
                            class="block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2">Password</label>
                        <input type="password" id="password" name="password" required
                            class="rounded border border-gray-200 text-sm w-full font-normal leading-[18px] text-black tracking-[0px] appearance-none block h-11 m-0 p-[11px] focus:ring-2 ring-offset-2 ring-gray-900 outline-0">

                    </div>

                    <button type="submit"
                        class="bg-[#7747ff] w-max m-auto px-6 py-2 rounded text-white text-sm font-normal">Submit</button>

                </form>
                <div class="text-sm text-center mt-[1.6rem]">Already have account ? <a class="text-sm text-[#7747ff]"
                        href="/login">Login </a></div>
            </div>
        </section>

        <%- include("../common/footer.ejs") %>
            </body>

            </html>